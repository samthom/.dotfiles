
set rnu
set hidden
set history=100
set autoindent
set hlsearch
set showmatch
set tabstop=2
set shiftwidth=2

syntax on

" Basic maping starts here
let mapleader=" "
let base16colorspace=256

" Maping starts here
:imap jj <Esc>
map <leader>s :source ~/.vimrc<CR>
map <leader>l :ls <CR>
map <leader>h :noh <CR>

" Commands
autocmd BufWritePre * :%s/\s\+$//e
